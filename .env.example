# Example Global Environment Configuration for kuikui
# Copy this file to .env and modify the values as needed

# Application Environment
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=3001
BACKEND_HOST=localhost
BACKEND_URL=http://localhost:3001

# Frontend Configuration  
FRONTEND_PORT=5173
FRONTEND_HOST=localhost
FRONTEND_URL=http://localhost:5173

# API Configuration
API_BASE_URL=http://localhost:3001/api

# WebSocket Configuration
WEBSOCKET_URL=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Room Configuration
ROOM_EXPIRY_HOURS=24

# Production Configuration Examples:
# NODE_ENV=production
# BACKEND_URL=https://api.kuikui.app
# FRONTEND_URL=https://kuikui.app
# API_BASE_URL=https://api.kuikui.app/api
# WEBSOCKET_URL=https://api.kuikui.app
# CORS_ORIGIN=https://kuikui.app