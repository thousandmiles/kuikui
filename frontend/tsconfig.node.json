{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "isolatedModules": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "vite.config.ts"
    ]
}